<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'login-form'}) do |f| %>
  <div class="login-wrap">
      <p class="login-img white">
          <i class="icon-dlf-logo"></i> <span class="dlf">DLF</span>
      </p>



      <div class="input-group">
          <span class="input-group-addon">
              <i class="glyphicon glyphicon-user"></i>
          </span>
          <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email Address' %>
      </div>

      <div class="input-group">
          <span class="input-group-addon">
              <i class="glyphicon glyphicon-lock"></i>
          </span>
          <%= f.password_field :password, class: 'form-control', placeholder: 'Password', autocomplete: "off" %>
      </div>

      <div class="input-group">
          <span class="input-group-addon">
              <i class="glyphicon glyphicon-lock"></i>
          </span>
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation', autocomplete: "off" %>
      </div>

      <%= f.submit "Sign Up", class: "btn btn-primary btn-lg btn-block" %>

      <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-info btn-lg text-white btn-block' %>
      <!-- <button class="btn btn-info btn-lg btn-block" type="submit">Signup</button> -->
  </div>

  <% end %>
</div>
