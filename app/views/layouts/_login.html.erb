<section id="login">
    <div class="row">
        <div class="container">
            <div class="col-md-12">
                <div class="pull-right login-bar">
                    <% if user_signed_in? %>
                        Logged in as
                        <%= current_user.email %> |
                        <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
                <% else %>
                    <%= link_to('Login', new_user_session_path) %>
                    |
                    <%= link_to('Register', new_user_registration_path) %>
                <% end %>
                </div>
            </div>
        </div>
    </div>
</section>
